{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "skipLibCheck": true,
    "lib": ["ES2020"],
    "module": "esnext",
    "types": ["jest", "node"]
  },
  "include": ["App.tsx", "index.ts", "src/**/*.ts", "src/**/*.tsx", "e2e/**/*.ts"],
  "exclude": [
    "node_modules",
    "backend/**",
    "developpement_farm/**",
    "admin-web/**",
    "coverage/**",
    "dist/**",
    ".expo/**",
    "**/store/services/**",
    "**/services/slices/**"
  ]
}
